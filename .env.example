# FFmpeg путь (по умолчанию ищет в PATH)
FFMPEG_PATH=ffmpeg

# Whisper настройки
WHISPER_MODEL=small
WHISPER_DEVICE=cpu
WHISPER_COMPUTE_TYPE=int8

# GigaChat API настройки (согласно документации)
GIGACHAT_ENABLED=false
# GIGACHAT_API_KEY=your_authorization_key_here

# URL согласно документации
GIGACHAT_AUTH_URL=https://ngw.devices.sberbank.ru:9443/api/v2/oauth
GIGACHAT_API_URL=https://gigachat.devices.sberbank.ru/api/v1

# Параметры GigaChat
GIGACHAT_MODEL=gigachat:latest
GIGACHAT_TIMEOUT=30
GIGACHAT_MAX_TOKENS=131072
GIGACHAT_SCOPE=GIGACHAT_API_PERS  # GIGACHAT_API_PERS, GIGACHAT_API_B2B, GIGACHAT_API_CORP

# Настройки валидации файлов
MAX_FILE_SIZE_MB=100
ALLOWED_VIDEO_EXTENSIONS=[".mp4", ".mov", ".avi", ".mkv", ".webm", ".flv", ".wmv", ".m4v"]

# Настройки кеширования
CACHE_ENABLED=true
CACHE_TTL=3600
CACHE_DIR=cache/analysis

# Настройки логирования
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
LOG_MAX_SIZE_MB=10
LOG_BACKUP_COUNT=5

# Настройки производительности
METRICS_ENABLED=true
MAX_CONCURRENT_ANALYSES=3
CLEANUP_TEMP_FILES=true
TEMP_FILE_RETENTION_MINUTES=30

# Параметры детекции пауз и слов-паразитов
MIN_PAUSE_GAP_SEC=0.5
LONG_PAUSE_SEC=2.5
SILENCE_FACTOR=0.35
PAUSE_SEGMENT_TIME_TOLERANCE=0.25

# VAD (webrtcvad/pyannote) - по умолчанию используем webrtcvad
USE_WEBRTC_VAD=true
WEBRTC_VAD_MODE=3
USE_PYANNOTE_VAD=false
PYANNOTE_MODEL=pyannote/voice-activity-detection

# Кластеризация слов-паразитов
FILLER_CLUSTER_GAP_SEC=2.0

# LLM классификация слов-паразитов (опционально)
LLM_FILLERS_ENABLED=false
LLM_FILLERS_MAX_TOKENS=256
LLM_FILLERS_MODEL=GigaChat
